{
    "compilerOptions": {
      "target": "ES2020",
      "lib": ["dom", "ES2020"],
      "module": "ESNext",
      "moduleResolution": "node",
      "declaration": true,
      "declarationMap": true,
      "outDir": "dist",
      "strict": true,
      "jsx": "react",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "exclude": ["dist", "node_modules"],
    "include": ["src"]
  }
    